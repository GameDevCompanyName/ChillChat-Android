<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gamedev.chillchat.GUI.MenuActivity"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="192.168.10.142"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/settings_local" android:textSize="20sp"
                android:gravity="center" android:layout_weight="1"/>
        <Button
                android:text="Set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/button_local"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="138.68.74.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/settings_global" android:layout_weight="1"
                android:textSize="20sp" android:gravity="center"/>
        <Button
                android:text="Set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_global" android:layout_weight="3"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/settings_current" android:gravity="center"
            android:textSize="30sp"/>
</LinearLayout>
